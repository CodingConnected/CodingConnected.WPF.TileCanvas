<Window x:Class="CodingConnected.WPF.TileCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grid Dashboard" Height="600" Width="1000"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#f0f0f0">
            <Button Content="Add Panel" Click="AddPanel_Click" Margin="0,0,10,0" Padding="10,5"/>
            <Button Content="Save Layout" Click="SaveLayout_Click" Margin="0,0,10,0" Padding="10,5"/>
            <Button Content="Load Layout" Click="LoadLayout_Click" Margin="0,0,10,0" Padding="10,5"/>
            <Button Content="Reset Layout" Click="ResetLayout_Click" Margin="0,0,10,0" Padding="10,5"/>
            <Separator Width="1" Margin="10,0"/>
            <TextBlock Text="Grid Size:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <ComboBox x:Name="GridSizeCombo" SelectedIndex="1" Width="80" SelectionChanged="GridSize_Changed">
                <ComboBoxItem Content="25px"/>
                <ComboBoxItem Content="50px"/>
                <ComboBoxItem Content="100px"/>
            </ComboBox>
            <CheckBox x:Name="ShowGridCheck" Content="Show Grid" IsChecked="True"
                     VerticalAlignment="Center" Margin="15,0,0,0"
                     Checked="ShowGrid_Changed" Unchecked="ShowGrid_Changed"/>
            <Separator Width="1" Margin="15,0,10,0"/>
            <CheckBox x:Name="FlexibleGridCheck" Content="Flexible Columns" IsChecked="False"
                     VerticalAlignment="Center" Margin="0,0,0,0"
                     Checked="FlexibleGrid_Changed" Unchecked="FlexibleGrid_Changed"/>
            <TextBlock Text="Columns:" VerticalAlignment="Center" Margin="15,0,5,0"/>
            <TextBox x:Name="ColumnCountBox" Text="12" Width="40" VerticalAlignment="Center"
                    TextChanged="ColumnCount_Changed"/>
            <TextBlock Text="Min Width:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox x:Name="MinColumnWidthBox" Text="80" Width="40" VerticalAlignment="Center"
                    TextChanged="MinColumnWidth_Changed"/>
        </StackPanel>

        <!-- Dashboard Canvas -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid>
                <!-- Grid lines background -->
                <Canvas x:Name="GridLinesCanvas" Background="White"/>

                <!-- Dashboard items -->
                <Canvas x:Name="DashboardCanvas" 
                        Background="Transparent"
                        MinWidth="1000" 
                        MinHeight="800"
                        AllowDrop="True"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>