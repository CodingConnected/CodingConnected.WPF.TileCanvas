<Window x:Class="CodingConnected.WPF.TileCanvas.Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:vms="clr-namespace:CodingConnected.WPF.TileCanvas.Example.ViewModels"
        xmlns:tiles="clr-namespace:CodingConnected.WPF.TileCanvas.Library.Controls;assembly=CodingConnected.WPF.TileCanvas.Library"
        xmlns:selectors="clr-namespace:CodingConnected.WPF.TileCanvas.Example.Selectors"
        d:DataContext="{d:DesignInstance vms:MainViewModel}" mc:Ignorable="d"
        Title="Tile Canvas Example - MVVM" Height="600" Width="1000">
    
    <Window.Resources>
        <!-- Include the pane data templates -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/PaneDataTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Create the PaneTemplateSelector -->
            <selectors:PaneTemplateSelector x:Key="PaneTemplateSelector"
                                            ChartTemplate="{StaticResource ChartPaneTemplate}"
                                            StatsTemplate="{StaticResource StatsPaneTemplate}"
                                            TableTemplate="{StaticResource TablePaneTemplate}"
                                            DefaultTemplate="{StaticResource DefaultPaneTemplate}"/>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#f0f0f0" Margin="5">
            <Button Content="Add Panel" Command="{Binding AddPaneCommand}" Margin="5" Padding="10,5"/>
            <Button Content="Chart" Command="{Binding AddChartPaneCommand}" Margin="2,5" Padding="8,5" Background="#FFE6F3FF"/>
            <Button Content="Stats" Command="{Binding AddStatsPaneCommand}" Margin="2,5" Padding="8,5" Background="#FFE6FFE6"/>
            <Button Content="Table" Command="{Binding AddTablePaneCommand}" Margin="2,5" Padding="8,5" Background="#FFFFE6E6"/>
            <Button Content="Save Layout" Command="{Binding SaveLayoutCommand}" Margin="5" Padding="10,5"/>
            <Button Content="Load Layout" Command="{Binding LoadLayoutCommand}" Margin="5" Padding="10,5"/>
            <Button Content="Clear All" Command="{Binding ClearAllPanesCommand}" Margin="5" Padding="10,5"/>
            <Separator Margin="10,0"/>

            <TextBlock Text="Grid Mode:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <ComboBox Width="100" VerticalAlignment="Center" Margin="0,0,10,0"
                      SelectedValue="{Binding GridMode}" 
                      SelectedValuePath="Content">
                <ComboBoxItem Content="Fixed"/>
                <ComboBoxItem Content="Flexible"/>
            </ComboBox>

            <TextBlock Text="Columns:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox Text="{Binding ColumnCount}" Width="40" VerticalAlignment="Center" Margin="0,0,10,0"/>

            <TextBlock Text="Min. column width:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox Text="{Binding MinColumnWidth}" Width="40" VerticalAlignment="Center" Margin="0,0,10,0"/>

            <CheckBox Content="Show Grid" IsChecked="{Binding ShowGrid}"
                     VerticalAlignment="Center" Margin="10,0,10,0"/>

            <CheckBox Content="Edit Mode" IsChecked="{Binding IsEditMode}"
                     VerticalAlignment="Center" Margin="10,0,10,0"/>

            <CheckBox Content="Snap Drag" IsChecked="{Binding SnapDrag}"
                     VerticalAlignment="Center" Margin="0,0,10,0"/>

            <CheckBox Content="Snap Resize" IsChecked="{Binding SnapResize}"
                     VerticalAlignment="Center" Margin="0,0,0,0"/>
        </StackPanel>

        <!-- Tile Canvas with MVVM Binding -->
        <tiles:TileCanvas Grid.Row="1" Name="MainTileCanvas"
                          MinWidth="400" MinHeight="400"
                          PaneContentTemplateSelector="{StaticResource PaneTemplateSelector}"
                          ItemsSource="{Binding Path=Panes}"
                          IsEditMode="{Binding Path=IsEditMode}"
                          GridMode="{Binding Path=GridMode}"
                          ShowGrid="{Binding Path=ShowGrid}"
                          ColumnCount="{Binding Path=ColumnCount}"
                          MinColumnWidth="{Binding Path=MinColumnWidth}"
                          SnapToGridOnDrag="{Binding Path=SnapDrag}" PanelMargin="0"
                          SnapToGridOnResize="{Binding Path=SnapResize}"/>
    </Grid>
</Window>