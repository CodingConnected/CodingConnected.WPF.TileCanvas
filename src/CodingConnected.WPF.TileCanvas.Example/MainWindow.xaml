<Window x:Class="CodingConnected.WPF.TileCanvas.Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tiles="clr-namespace:CodingConnected.WPF.TileCanvas.Library.Controls;assembly=CodingConnected.WPF.TileCanvas.Library"
        Title="Tile Canvas Example" Height="600" Width="1000"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#f0f0f0" Margin="5">
            <Button Content="Add Panel" Click="AddPanel_Click" Margin="5" Padding="10,5"/>
            <Button Content="Save Layout" Click="SaveLayout_Click" Margin="5" Padding="10,5"/>
            <Button Content="Load Layout" Click="LoadLayout_Click" Margin="5" Padding="10,5"/>
            <Button Content="Clear All" Click="ClearAll_Click" Margin="5" Padding="10,5"/>
            <Separator Margin="10,0"/>

            <TextBlock Text="Grid Mode:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <ComboBox x:Name="GridModeCombo" Width="100" VerticalAlignment="Center" Margin="0,0,10,0"
                     SelectionChanged="GridMode_Changed">
                <ComboBoxItem Content="Fixed" IsSelected="True"/>
                <ComboBoxItem Content="Flexible"/>
            </ComboBox>

            <TextBlock Text="Columns:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox x:Name="ColumnCountBox" Text="12" Width="40" VerticalAlignment="Center" Margin="0,0,10,0"
                    TextChanged="ColumnCount_Changed"/>

            <CheckBox x:Name="ShowGridCheck" Content="Show Grid" IsChecked="True"
                     VerticalAlignment="Center" Margin="10,0,10,0"
                     Checked="ShowGrid_Changed" Unchecked="ShowGrid_Changed"/>

            <CheckBox x:Name="EditModeCheck" Content="Edit Mode" IsChecked="True"
                     VerticalAlignment="Center" Margin="10,0,10,0"
                     Checked="EditMode_Changed" Unchecked="EditMode_Changed"/>

            <CheckBox x:Name="SnapDragCheck" Content="Snap Drag" IsChecked="True"
                     VerticalAlignment="Center" Margin="0,0,10,0"
                     Checked="SnapDrag_Changed" Unchecked="SnapDrag_Changed"/>

            <CheckBox x:Name="SnapResizeCheck" Content="Snap Resize" IsChecked="True"
                     VerticalAlignment="Center" Margin="0,0,0,0"
                     Checked="SnapResize_Changed" Unchecked="SnapResize_Changed"/>
        </StackPanel>

        <!-- Tile Canvas -->
        <tiles:TileCanvas x:Name="TileCanvas" Grid.Row="1"
                         MinWidth="400" MinHeight="400"
                         PanelAdded="TileCanvas_PanelAdded"
                         PanelRemoved="TileCanvas_PanelRemoved"
                         LayoutChanged="TileCanvas_LayoutChanged"/>
    </Grid>
</Window>