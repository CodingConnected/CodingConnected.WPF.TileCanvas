<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:CodingConnected.WPF.TileCanvas.Example.ViewModels">

    <!-- Chart Pane DataTemplate -->
    <DataTemplate DataType="{x:Type viewModels:ChartPaneViewModel}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="0" Background="AliceBlue">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Chart Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="ðŸ“Š" FontSize="16" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ChartType}" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="Chart" Margin="5,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Chart Content -->
                <Border Grid.Row="1" BorderBrush="#FFE0E0E0" BorderThickness="1" CornerRadius="4">
                    <StackPanel Margin="10">
                        <TextBlock Text="{Binding SeriesInfo}" 
                                   TextWrapping="Wrap" 
                                   Foreground="DarkGray" 
                                   FontSize="14"/>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="Data: " FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding DataDescription}"/>
                        </StackPanel>

                        <CheckBox Content="Show Legend" 
                                  IsChecked="{Binding ShowLegend}" 
                                  Margin="0,5,0,0"/>
                        
                        <CheckBox Content="Show Header" 
                                  IsChecked="{Binding ShowHeader}" 
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </DataTemplate>

    <!-- Stats Pane DataTemplate -->
    <DataTemplate DataType="{x:Type viewModels:StatsPaneViewModel}">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Stats Header -->
            <TextBlock Grid.Row="0" 
                       Text="{Binding HeaderText}" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       Margin="0,0,0,10"/>
            
            <!-- Statistics List -->
            <ItemsControl Grid.Row="1" ItemsSource="{Binding Statistics}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <TextBlock Text="{Binding Icon}" 
                                       Margin="0,0,5,0" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Label}" 
                                       Width="120" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Value}" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center"
                                       Foreground="{Binding TextColor}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <!-- Show Header Checkbox -->
            <CheckBox Grid.Row="2" Content="Show Header" 
                      IsChecked="{Binding ShowHeader}" 
                      Margin="0,10,0,0" HorizontalAlignment="Left"/>
        </Grid>
    </DataTemplate>

    <!-- Table Pane DataTemplate -->
    <DataTemplate DataType="{x:Type viewModels:TablePaneViewModel}">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Table Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="ðŸ“‹" FontSize="16" Margin="0,0,5,0" VerticalAlignment="Center"/>
                <TextBlock Text="Data Table" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- Table Content -->
            <Border Grid.Row="1" BorderBrush="#FFE0E0E0" BorderThickness="1" CornerRadius="4">
                <StackPanel Margin="10">
                    <TextBlock Text="{Binding TableDescription}" 
                               TextWrapping="Wrap" 
                               Foreground="DarkGray" 
                               FontSize="14"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Data Source: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding DataSource}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Table Info -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0" HorizontalAlignment="Right">
                <TextBlock Text="{Binding RowCount}" FontSize="12" Foreground="Gray"/>
                <TextBlock Text=" rows Ã— " FontSize="12" Foreground="Gray"/>
                <TextBlock Text="{Binding ColumnCount}" FontSize="12" Foreground="Gray"/>
                <TextBlock Text=" columns" FontSize="12" Foreground="Gray"/>
            </StackPanel>
        </Grid>
    </DataTemplate>
    
    <!-- Label Pane DataTemplate -->
    <DataTemplate DataType="{x:Type viewModels:LabelPaneViewModel}">
        <Grid>
            <TextBlock Text="{Binding Path=Title}" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="DarkSlateGray" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       TextWrapping="Wrap"/>
        </Grid>
    </DataTemplate>

</ResourceDictionary>