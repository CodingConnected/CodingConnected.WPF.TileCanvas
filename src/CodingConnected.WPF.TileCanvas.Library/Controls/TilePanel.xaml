<UserControl x:Class="CodingConnected.WPF.TileCanvas.Library.Controls.TilePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">
    <UserControl.Template>
        <ControlTemplate TargetType="{x:Type UserControl}">
            <Border BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Background="{TemplateBinding Background}"
                    CornerRadius="5" Margin="2">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border x:Name="PART_Header" Grid.Row="0"
                            Background="{Binding HeaderBrush, ElementName=Root}"
                            BorderBrush="Gray"
                            BorderThickness="0,0,0,1"
                            Cursor="{Binding HeaderCursor, ElementName=Root}">
                        <Grid>
                            <StackPanel Orientation="Horizontal" Margin="10,5,10,5"
                                       Background="Transparent">
                                <TextBlock Text="{Binding Title, ElementName=Root}"
                                          FontWeight="Bold"
                                          FontSize="14"
                                          VerticalAlignment="Center"
                                          IsHitTestVisible="False"/>
                            </StackPanel>

                            <!-- Close Button -->
                            <Button x:Name="PART_CloseButton"
                                   Content="âœ•"
                                   Width="25" Height="25"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Top"
                                   Margin="0,5,5,0"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   FontWeight="Bold"
                                   Cursor="Hand"
                                   Visibility="{Binding CloseButtonVisibility, ElementName=Root}"/>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <Border Grid.Row="1" Padding="15">
                        <ContentPresenter Content="{TemplateBinding Content}"/>
                    </Border>

                    <!-- Resize Thumb -->
                    <Thumb x:Name="PART_ResizeThumb"
                           Grid.RowSpan="2"
                           Width="15" Height="15"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Margin="0,0,3,3"
                           Cursor="SizeNWSE"
                           Background="DarkGray"
                           Opacity="0.5"
                           Visibility="{Binding ResizeThumbVisibility, ElementName=Root}"/>
                </Grid>
            </Border>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>